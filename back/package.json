{
  "name": "back",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./dist/src/server.js",
    "dev": "tsx watch ./src/server.ts",
    "dev:production": "cross-env NODE_ENV=production tsx watch ./src/server.ts",
    "build": "tsc && tsc-alias",
    "prisma:generate:pg": "prisma generate --schema=./prisma/postgres/schema.prisma",
    "prisma:generate:sqlite": "prisma generate --schema=./prisma/sqlite/schema.prisma",
    "postinstall": "prisma generate --schema=./prisma/postgres/schema.prisma && prisma generate --schema=./prisma/sqlite/schema.prisma",
    "test": "cross-env NODE_ENV=test DATABASE_URL=file:./test.db vitest run --coverage",
    "test:integration": "cross-env NODE_ENV=test DATABASE_URL=file:./test.db vitest run --project integration",
    "test:unit": "cross-env NODE_ENV=test vitest run --coverage --project unit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/adapter-better-sqlite3": "^7.3.0",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^6.19.2",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.13",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^6.4.15",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "cross-env": "^7.0.3",
    "prisma": "^6.19.2",
    "supertest": "^7.1.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^4.0.18"
  }
}
